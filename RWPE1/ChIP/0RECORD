wget https://sra-downloadb.be-md.ncbi.nlm.nih.gov/sos1/sra-pub-run-2/SRR493814/SRR493814.2
wget https://sra-downloadb.be-md.ncbi.nlm.nih.gov/sos1/sra-pub-run-2/SRR493815/SRR493815.2
fastq-dump *
fastqc -t 2 *.fastq
cp hg37.fa ../chip/
mkdir index/index
bowtie2-build hg38.fa index # Might need to submit as PBS
bowtie2 --no-unal --threads 4 -x index/index -U SRR493814.2.fastq -S ERG_chip.sam
samtools view -b ERG_chip.sam > ERG_chip.bam
samtools sort ERG-chip.bam -o ERG_chip_sorted.bam
samtools index ERG_chip_sorted.bam
bowtie2 --no-unal --threads 4 -x index/index -U SRR493815.2.fastq -S input.sam
samtools view -b input.sam > input.bam
samtools sort input.bam -o input_sorted.bam
samtools index input_sorted.bam
macs2 callpeak -t ERG_chip_sorted.bam -c input_sorted.bam -f BAM -g hs -n ERG --outdir peaks -p .001
Rscript annoPeaks.R
awk '$12 !~ /Distal/' annotated_peaks.tsv | cut -f 18 | sort | uniq > flagERG_uniqueGenes.txt
